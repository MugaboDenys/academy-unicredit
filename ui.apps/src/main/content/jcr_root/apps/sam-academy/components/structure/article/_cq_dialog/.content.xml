<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          jcr:primaryType="nt:unstructured">
    <content jcr:primaryType="nt:unstructured">
                <items jcr:primaryType="nt:unstructured">
                    <article
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Article"
                        sling:orderBefore="advanced"
                        sling:resourceType="granite/ui/components/foundation/section">
                        <layout
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                            margin="{Boolean}false"/>
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <details
                                        jcr:primaryType="nt:unstructured"
                                        jcr:title="Article's Basic information"
                                        sling:resourceType="granite/ui/components/foundation/form/fieldset">
                                        <items jcr:primaryType="nt:unstructured">
                                            <image cq:showOnCreate="{Boolean}true"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                    jcr:primaryType="nt:unstructured"
                                                    rootPath="/content/dam/sam-academy/magazine"
                                                    fieldLabel="Choose an article's picture"
                                                    name="./image" />
                                            <text cq:showOnCreate="{Boolean}true"
                                                  jcr:primaryType="nt:unstructured"
                                                  sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                                                  fieldLabel="Set the Article title"
                                                  name="./text"
                                                 />
                                            <date cq:showOnCreate="{Boolean}true"
                                                  jcr:primaryType="nt:unstructured"
                                                  sling:resourceType="granite/ui/components/coral/foundation/form/datepicker"
                                                  fieldLabel="Pick the  date"
                                                  name="./date"
                                                  type="date"/>

                                        </items>
                                    </details>
                                </items>
                            </column>
                        </items>
                    </article>
        </items>
    </content>
</jcr:root>